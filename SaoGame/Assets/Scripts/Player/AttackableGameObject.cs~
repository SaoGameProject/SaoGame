using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class AttackableGameObject : MonoBehaviour
{
    public int health;

    public void TakeDamage(float DamageAmount)
    {
        health -= DamageAmount;

        if (health <= 0)
        {
            Die();

        }
    }

    void Die()
    {
        Destroy(gameObject);
    }
}
